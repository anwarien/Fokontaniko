{% for history in historys %}
    <div class="timeline-task">
        <div class="icon {% if history.type == 1 %}bg-primary{% elseif history.type == 2 %}bg-success{% elseif history.type == 3 %}bg-danger{% endif %}">
            {% if history.type == 1 %}
                <i class="ti-plus"></i>
            {% elseif history.type == 2 %}
                <i class="ti-pencil"></i>
            {% elseif history.type == 3 %}
                <i class="ti-trash"></i>
            {% endif %}
        </div>
        <div class="tm-title">
            <h4>
                {{ history.user ? history.user.username : 'Fokontaniko' }}
            </h4>
            <span class="time"><i class="ti-time"></i>{{ history.updatedAt|date('H:i') }}</span>
        </div>
        <p>{{ history.action }}</p>
    </div>
{% endfor %}

{{ knp_pagination_render(historys) }}
