<div class="header-area header-bottom">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-9  d-none d-lg-block">
                <div class="horizontal-menu">
                    <nav>
                        <ul id="nav_menu">
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="{% if menu_dashboard is defined %}active{% endif %}">
                                    <a href="{{ path('dashboard_home') }}">
                                        <i class="ti-dashboard"></i>
                                        <span>Fandraisana</span>
                                    </a>
                                </li>
                                <li class="{% if menu_employe is defined %}active{% endif %}">
                                    <a href="{{ path('list_employee') }}">
                                        <i class="ti-dashboard"></i>
                                        <span>Mpiasa</span>
                                    </a>
                                </li>
                                <li class="{% if menu_mponina is defined %}active{% endif %}">
                                    <a href="{{ path('mponina_list') }}">
                                        <i class="fa fa-group"></i>
                                        <span>Mponina</span>
                                    </a>
                                </li>
                            {% endif %}
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <li class="{% if menu_fokontany is defined %}active{% endif %}">
                                    <a href="{{ path('fokontany_list') }}">
                                        <i class="ti-desktop"></i>
                                        <span>Fokontany</span>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- nav and search button -->
            <div class="col-lg-3 clearfix">
                <div class="search-box">
                    <form action="{{ app.request.uri  }}" method="get">
                        <input type="text" name="search" placeholder="Hitady ...">
                        <button type="submit"><i class="ti-search"></i></button>
                    </form>
                </div>
            </div>
            <!-- mobile_menu -->
            <div class="col-12 d-block d-lg-none">
                <div id="mobile_menu"></div>
            </div>
        </div>
    </div>
</div>
